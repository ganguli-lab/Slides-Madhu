%\label{nbOpt}
%\end{split}
%\end{equation}


\begin{equation*}
\begin{split}
\tilde{q}_0,\tilde{a} &= \arg\min_{q_0,a}{q_0} \\
\text{s.t. }\quad  a I_{q_0} & = \kappa,\quad a^2 J_a = a-q_0
\label{unregopt}
\end{split}
\end{equation*}


\begin{itemize}
\item $\tilde{q}_0,\tilde{a}$ are smoothing parameters
\item $\tilde{q}_0$ is the asymptotic MSE
\item $f,g$ log concave
\end{itemize}
